<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/abtlightbrown">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:fontFamily="@font/pixelgamefont"
        android:textColor="@color/abtpink"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ECO-NICE!"
        android:fontFamily="@font/pixelgamefont"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="116dp"
        android:layout_height="120dp"
        android:src="@drawable/econice_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixelgamefont"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="DEVELOPERS"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/abtrosepink">

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ann"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelgamefont"
                android:paddingLeft="10dp"
                android:text="Ann Vergie Adecer"
                android:textColor="@color/abtbeige"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/andy"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelgamefont"
                android:paddingLeft="10dp"
                android:text="Patricia Andy Aquino"
                android:textColor="@color/abtbeige"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/jona"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelgamefont"
                android:paddingLeft="10dp"
                android:text="Jonalee Lorie Naife"
                android:textColor="@color/abtbeige"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/kinyo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelgamefont"
                android:paddingLeft="10dp"
                android:text="Angelique Grace QuiÃ±ones"
                android:textColor="@color/abtbeige"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Polytechnic University of the Philippines,
        Sta. Mesa 2022"
        android:fontFamily="@font/pixelgamefont"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAbtBack"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/abtpink"
        android:text="BACK"
        android:fontFamily="@font/pixelgamefont"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/abtbeige"
        android:background="@drawable/round_corner"/>

</LinearLayout>